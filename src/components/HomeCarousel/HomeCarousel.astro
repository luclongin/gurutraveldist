---
import UserReviewWithQuotes from '../UserReviewWithQuotes/UserReviewWithQuotes.astro';
import ReactCarousel from './ReactCarousel.jsx';
import { t } from "i18next";
---
<!-- Hydrating Carousel with Swiper Library written in React and passing Astro children to it -->
<ReactCarousel client:visible>
	<!-- Slot here allows the insertion of Astro components to the React component 
	     if a new review is added, the React component needs to be updated to accomodate it
	-->
	<UserReviewWithQuotes 
		slot="review1" 
		clientName={t("homepage:homepage.reviews-section.reviews.review-1.author")} 
		clientExpedition={t("homepage:homepage.reviews-section.reviews.review-1.author-exped")} 
		clientDate={t("homepage:homepage.reviews-section.reviews.review-1.author-date")} 
		reviewText={t("homepage:homepage.reviews-section.reviews.review-1.text")} 
	/>
	<UserReviewWithQuotes 
		slot="review2" 
		clientName={t("homepage:homepage.reviews-section.reviews.review-2.author")} 
		clientExpedition={t("homepage:homepage.reviews-section.reviews.review-2.author-exped")} 
		clientDate={t("homepage:homepage.reviews-section.reviews.review-2.author-date")} 
		reviewText={t("homepage:homepage.reviews-section.reviews.review-2.text")} 
	/>
	<UserReviewWithQuotes 
		slot="review3" 
		clientName={t("homepage:homepage.reviews-section.reviews.review-3.author")} 
		clientExpedition={t("homepage:homepage.reviews-section.reviews.review-3.author-exped")} 
		clientDate={t("homepage:homepage.reviews-section.reviews.review-3.author-date")} 
		reviewText={t("homepage:homepage.reviews-section.reviews.review-3.text")} 
	/>
</ReactCarousel>