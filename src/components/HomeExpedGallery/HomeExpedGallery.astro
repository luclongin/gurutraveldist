---
import './HomeExpedGallery.less';
import { t } from "i18next";
import Trek1Img from "../../assets/images/trek-1.jpg";
import Trek2Img from "../../assets/images/trek-2.jpg";
import Climb1Img from "../../assets/images/climb-1.jpg";
import Climb2Img from "../../assets/images/climb-2.jpg";
import ImgCardwithOverlay from '../ImgCardwithOverlay/ImgCardwithOverlay.astro';
---
<!-- Gallery component in a specific order for this layout. Still need to find a way to name the different galleries. -->
<div class="exped-images-container">
    <ImgCardwithOverlay title={t("homepage:homepage.expeditions-section.exped-1-title")} imgSrc={Trek1Img.src}/>
    <ImgCardwithOverlay title={t("homepage:homepage.expeditions-section.exped-2-title")} imgSrc={Climb2Img.src} />
    <ImgCardwithOverlay title={t("homepage:homepage.expeditions-section.exped-3-title")} imgSrc={Climb1Img.src} />
    <ImgCardwithOverlay title={t("homepage:homepage.expeditions-section.exped-4-title")} imgSrc={Trek2Img.src} />
</div>